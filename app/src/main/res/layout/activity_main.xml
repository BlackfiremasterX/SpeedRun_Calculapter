<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_expression"
                style="@style/Style1"
                android:text="Expression" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_result"
                style="@style/Style1"
                android:text="Result" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_ac"
                style="@style/Style2"
                android:text="AC" />

            <TextView
                android:id="@+id/tv_open"
                style="@style/Style2"
                android:text="(" />

            <TextView
                android:id="@+id/tv_close"
                style="@style/Style2"
                android:text=")" />

            <TextView
                android:id="@+id/tv_plus"
                style="@style/Style2"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_seven"
                style="@style/Style1"
                android:text="7" />

            <TextView
                android:id="@+id/tv_eight"
                style="@style/Style1"
                android:text="8" />

            <TextView
                android:id="@+id/tv_nine"
                style="@style/Style1"
                android:text="9" />

            <TextView
                android:id="@+id/tv_minus"
                style="@style/Style2"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_four"
                style="@style/Style1"
                android:text="4" />

            <TextView
                android:id="@+id/tv_five"
                style="@style/Style1"
                android:text="5" />

            <TextView
                android:id="@+id/tv_six"
                style="@style/Style1"
                android:text="6" />

            <TextView
                android:id="@+id/tv_mul"
                style="@style/Style2"
                android:text="x" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_one"
                style="@style/Style1"
                android:text="1" />

            <TextView
                android:id="@+id/tv_two"
                style="@style/Style1"
                android:text="2" />

            <TextView
                android:id="@+id/tv_three"
                style="@style/Style1"
                android:text="3" />

            <TextView
                android:id="@+id/tv_div"
                style="@style/Style2"
                android:text=":" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_dot"
                style="@style/Style1"
                android:text="." />

            <TextView
                android:id="@+id/tv_zero"
                style="@style/Style1"
                android:text="0" />

            <TextView
                android:id="@+id/tv_back"
                style="@style/Style1"
                android:text="back" />

            <TextView
                android:id="@+id/tv_equals"
                style="@style/Style2"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>